{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2017", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"jsx": "react-jsxdev",
		"paths": {
			"@lellimecnar/application-hooks": [
				"packages/application/hooks/src/index.ts"
			],
			"@lellimecnar/application-service/client": [
				"packages/application/service/client/src/index.ts"
			],
			"@lellimecnar/application-service/schema": [
				"packages/application/service/schema/src/index.ts"
			],
			"@lellimecnar/application-service/server": [
				"packages/application/service/server/src/index.ts"
			],
			"@lellimecnar/shared-db": ["packages/shared/db/src/index.ts"],
			"@lellimecnar/shared-theme": ["packages/shared/theme/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp", ".next", "dist"]
}
